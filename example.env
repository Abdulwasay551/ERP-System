# ===========================================
# DJANGO ERP SYSTEM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update the values below

# ===========================================
# DJANGO CORE SETTINGS
# ===========================================
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-secure-one
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For production with PostgreSQL (recommended)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=erp_database
DB_USER=erp_user
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# For SQLite (development/testing only)
# Set USE_SQLITE=True to use SQLite instead of PostgreSQL
USE_SQLITE=False

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================
# Set to True when deploying to Vercel
VERCEL=False

# ===========================================
# PRODUCTION DATABASE EXAMPLES
# ===========================================
# Example for Supabase PostgreSQL:
# DB_HOST=db.your-project.supabase.co
# DB_NAME=postgres
# DB_USER=postgres
# DB_PASSWORD=your-supabase-password
# DB_PORT=5432

# Example for Railway PostgreSQL:
# DB_HOST=roundhouse.proxy.rlwy.net
# DB_NAME=railway
# DB_USER=postgres
# DB_PASSWORD=your-railway-password
# DB_PORT=12345

# Example for Neon PostgreSQL:
# DB_HOST=ep-your-endpoint.us-east-2.aws.neon.tech
# DB_NAME=neondb
# DB_USER=your-username
# DB_PASSWORD=your-neon-password
# DB_PORT=5432

# ===========================================
# ADDITIONAL SETTINGS (Optional)
# ===========================================
# Email configuration (for notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Redis configuration (for development with Celery)
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# SECURITY NOTES
# ===========================================
# 1. Never commit .env files to version control
# 2. Generate a secure SECRET_KEY for production
# 3. Use strong database passwords
# 4. Set DEBUG=False in production
# 5. Configure proper ALLOWED_HOSTS for production